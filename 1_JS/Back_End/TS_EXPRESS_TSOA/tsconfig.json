{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "removeComments": false,
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "outDir": "./build",
    "rootDirs": [
      "./src",
    ]
  },
  "exclude": [
    "logs",
    "node_modules",
    "info",
    "build"
  ]
}